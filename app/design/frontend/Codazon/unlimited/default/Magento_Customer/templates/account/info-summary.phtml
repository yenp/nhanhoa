$customer = \Magento\Framework\App\ObjectManager::getInstance()->create(\Magento\Customer\Model\Session::class)->getCustomer();
$greeting = $this->helper(\Codazon\ThemeLayoutPro\Helper\Data::class)->getConfig('themelayoutpro/header/customer_greeting_format');
$greeting = $greeting ? str_replace(['{{firstname}}', '{{fullname}}'], ['<span data-customerinfo="firstname"></span>', '<span data-customerinfo="fullname"></span>'], $greeting) : __('Hi %1','<span data-customerinfo="firstname"></span>');
