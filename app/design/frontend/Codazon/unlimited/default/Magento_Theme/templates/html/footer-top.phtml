<?php
$html = '';
$childBlocks = explode(',', $this->getData('child_blocks'));
foreach ($childBlocks as $childBlockName) {
    $childHtml = $this->getBlockHtml($childBlockName);
    if ($childHtml) {
        $html .= '<div class="' . $childBlockName.'">' . $childHtml . '</div>';
    }
}
?>

<?php if ($html) : ?>
<div class="footer-content-top">
    <div class="row switcher-footer">
        <div class="col-sm-24">
            <?php echo $html ?>
        </div>
    </div>
</div>
<?php endif ?>