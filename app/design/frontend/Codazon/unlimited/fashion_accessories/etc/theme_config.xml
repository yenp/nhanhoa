<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Codazon_ThemeLayoutPro:etc/config.xsd">
    <default>
        <themelayoutpro>
			<general>
				<newsletter_popup>unlimited-fashion-accessories-newsletter-popup</newsletter_popup>
			</general>
			<header>
				<header>header-style-05</header>
				<left_menu>codazon-links-list</left_menu>
				<main_menu>unlimited-fashion-accessories-main-menu</main_menu>
			</header>
            <main_content>
                <main_content>main-content-style02</main_content>
            </main_content>
            <footer>
                <footer>footer-style-01</footer>
            </footer>
		</themelayoutpro>
		<pages>
			<product_view>
				<layout>catalog_product_view_style01</layout>
				<moreview_style>horizontal</moreview_style>
			</product_view>
			<category_view>
				<design>
					<template>product/list/list-styles/list-style01.phtml</template>
				</design>
			</category_view>
		</pages>
		<images>
			<product>
                <base_image_width>400</base_image_width>
                <base_image_height>400</base_image_height>
                <moreview_image_width>80</moreview_image_width>
                <moreview_image_height>80</moreview_image_height>
            </product>
            <category>
                <product_image_width>320</product_image_width>
                <product_image_height>320</product_image_height>
            </category>
        </images>
	</default>
</config>