    <widget id="codazon_facebookfeeds" class="Codazon\ThemeLayoutPro\Block\Widget\FacebookFeeds" is_email_compatible="true" placeholder_image="Codazon_ThemeLayoutPro::images/facebookfeeds.png" ttl="86400">
