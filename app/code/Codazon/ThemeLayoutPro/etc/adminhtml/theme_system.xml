<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="codazon" translate="label" sortOrder="200">
            <label>Theme Configuration</label>
        </tab>
        <section id="themelayoutpro" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>General</label>
            <tab>codazon</tab>
            <resource>Codazon_ThemeLayoutPro::settings</resource>
            <group id="general" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enable_rtl" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Right To Left Layout</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="custom_body_class" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Custom Body Class</label>
                    <comment>Add a custom class to body tag.</comment>
                </field>
                <field id="newsletter_popup" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Newsletter Popup</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\CMSBlocks</source_model>
                    <comment>Don't select any block to disable popup</comment>
                </field>
                <field id="newsletter_popup_delay_time" translate="label comment" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Delay Time for Displaying Popup after Page Loaded (seconds)</label>
                </field>
                <field id="newsletter_popup_frequency" translate="label comment" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Frequency of Displaying Newsletter Popup (minutes)</label>
                </field>
                <field id="custom_css_file" translate="label comment" type="text" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Custom CSS File</label>
                    <comment><![CDATA[<strong>[file path]</strong>.<br />E.g.: You created a file with path "pub/media/my-project/custom-styles.css".<br />You have: <strong>[file path]</strong> = <strong>my-project/custom-styles.css</strong><br />Then enter "my-project/custom-styles.css" to this field.<br />Don't enter <span style="text-decoration: line-through">"pub/media/my-project/custom-styles.css"</span>!]]></comment>
                </field>
                
            </group>
            <group id="header" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Header</label>
                <field id="header" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Select Header</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\Headers</source_model>
                </field>
                <field id="enable_sticky_menu" translate="label comment" type="select" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Sticky Header</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="display_advanced_search" translate="label comment" type="select" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Display Advanced Search Link on Search Box</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="small_logo" translate="label comment" type="image" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Small Logo</label>
                    <comment>Allowed file types: jpg, jpeg, gif, png, svg</comment>
                    <backend_model>Codazon\ThemeLayoutPro\Model\Config\Backend\Image</backend_model>
                    <base_url type="media" scope_info="1">small_logo</base_url>
                </field>
                <field id="disable_default_menu" translate="label comment" type="select" sortOrder="16" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Disable Default Menu</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>If set "No", default menu of Magento is displayed instead of horizontal mega menu</comment>
                </field>
                <field id="main_menu" translate="label comment" type="select" sortOrder="17" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Select Main Menu</label>
                    <source_model>Codazon\MegaMenu\Model\Choosemenu</source_model>
                    <comment>Horizontal Main Menu</comment>
                </field>
                <field id="main_menu_paging" translate="label comment" type="select" sortOrder="18" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Paging main menu</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="ajax_menu" translate="label" type="select" sortOrder="19" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Use Ajax Menu</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>If set "Yes", the drop-downs of menu will be load by ajax instead of being loaded directly</comment>
                </field>
                <field id="vertical_menu" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Select Vertical Menu</label>
                    <source_model>Codazon\MegaMenu\Model\Choosemenu</source_model>
                    <comment>Vertical menu is used or not depending theme style (displayed beside top slideshow or displayed when hovering menu title).</comment>
                </field>
                <field id="vertical_menu_title" translate="label comment" type="text" sortOrder="21" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Vertical Menu Title</label>
                </field>
                <field id="vertical_menu_align_height" translate="label comment" type="select" sortOrder="22" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Align Vertical Menu Height</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Display "More View" button when the vertical menu height is longer than the slideshow height.</comment>
                </field>
                <field id="left_menu" translate="label comment" type="select" sortOrder="23" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Select Sidebar Menu</label>
                    <source_model>Codazon\MegaMenu\Model\Choosemenu</source_model>
                    <comment>Sidebar menu is used or not depending on theme style (displayed on toggle sidebar).</comment>
                </field>
                <field id="left_menu_hovering" translate="label comment" type="select" sortOrder="24" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Use Hovering Behavior for Sidebar Menu.</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Hovering on menu item to view the sub items instead of clicking. Only apply for menu on left sidebar.</comment>
                </field>
                <field id="account_panel_style" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Account Panel Style</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\MenuStyles</source_model>
                </field>
                <field id="wishlist_style" translate="label comment" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Wish List Style</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\MenuStyles</source_model>
                </field>
                <field id="mini_cart_style" translate="label comment" type="select" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Mini Cart Style</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\MenuStyles</source_model>
                </field>
                <field id="customer_greeting_format" translate="label comment" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Customer Greeting format</label>
                    <comment><![CDATA[Use for the greeting on account sidebar/dropdown/popup. Default: <strong>Hi {{firstname}}</strong>.<br />Note:<br /><strong>{{firstname}}</strong> will be replaced by customer first name.<br /><strong>{{fullname}}</strong> will be replaced by customer full name. Leave empty to use default.]]></comment>
                </field>
            </group>
            <group id="main_content" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Main Content</label>
                <field id="main_content" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Select Main Content</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\MainContents</source_model>
                    <backend_model>Codazon\ThemeLayoutPro\Model\Config\Backend\MainContentStyle</backend_model>
                </field>
            </group>
            <group id="footer" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Footer</label>
                <field id="footer" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Select Footer</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\Footers</source_model>
                </field>
            </group>
            <group id="search_by_category" translate="label" type="text" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Search by Category</label>
                <field id="enable" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Search by Category</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="category_parent_id" translate="label comment" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Only Display Categories under</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\Categories</source_model>
                </field>
                <field id="category_max_depth" translate="label comment" type="select" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Category Max Depth</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\CategoryMaxDepth</source_model>
                </field>
            </group>
        </section>
        <section id="pages" translate="label" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Pages</label>
            <tab>codazon</tab>
            <resource>Codazon_ThemeLayoutPro::settings</resource>
            <group id="product_view" translate="label" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Product View</label>
                <field id="layout" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Layout Type</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\ProductViewStyles</source_model>
                    <backend_model>Codazon\ThemeLayoutPro\Model\Config\Backend\ProductViewStyle</backend_model>
                </field>
                <field id="custom_layout_handle" translate="label comment" type="text" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Custom Layout Handle</label>
                    <comment><![CDATA[Carefully: Only use for developer. If this field is set value, the <strong>Layout Type</strong> field won't affect to frontend. Don't write anything here if you are not sure about the result.]]></comment>
                </field>
                <field id="custom_layout_xml" translate="label comment" type="textarea" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Custom Layout XML</label>
                    <comment><![CDATA[Carefully: Only use for developer. Don't write anything here if you are not sure about the result.]]></comment>
                </field>
                <field id="custom_less_file" translate="label comment" type="text" sortOrder="13" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Custom Less File</label>
                    <backend_model>Codazon\ThemeLayoutPro\Model\Config\Backend\ProductViewCustomStyle</backend_model>
                    <comment><![CDATA[Carefully: Only use for developer. If this field is set value, the css of product page specified by <strong>Layout Type</strong> field will be replaced by compiled CSS of the file in this field. Don't write anything here if you are not sure about the result.]]></comment>
                </field>
                <field id="moreview_style" translate="label comment" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>More View Slider Style</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\SliderStyles</source_model>
                </field>
                <field id="moreview_margin" translate="label comment" type="text" sortOrder="25" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>More View Thumbnail Margin</label>
                </field>
                <field id="enable_zoom_lens" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Enable Manifier</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="inner_zoom" translate="label comment" type="select" sortOrder="31" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Inner Zoom</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="inner_zoom_ratio" translate="label comment" type="text" sortOrder="31" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Inner Zoom Ratio</label>
                    <comment><![CDATA[0 < value â¤ 1]]></comment>
                </field>
                <field id="show_caption" translate="label comment" type="select" sortOrder="32" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Show Caption at Bottom Side of Main Image</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="lens_width" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Manifier Width</label>
                </field>
                <field id="lens_height" translate="label comment" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Manifier Height</label>
                </field>
                <field id="fullscreenzoom" translate="label comment" type="text" sortOrder="51" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Full Screen Zoom</label>
                    <comment>Zoom step in percents for the fullscreen view (integer value)</comment>
                </field>
                <field id="display_product_labels" translate="label comment" type="select" sortOrder="55" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Display Product Labels</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="display_labels_on_right" translate="label comment" type="select" sortOrder="55" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Display Product Labels on the Right Side of Product Image</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>If set "No", the labels will be displayed on left side of product image.</comment>
                </field>
                <field id="display_social_links" translate="label comment" type="select" sortOrder="60" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Display Social Links</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="custom_text" translate="label comment" type="select" sortOrder="70" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Custom Text</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\CMSBlocks</source_model>
                </field>
                <field id="display_sale_timer" translate="label comment" type="select" sortOrder="80" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Display Sale Countdown Timer</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Display Sale Countdown Timer when product has special price and "Special To Date" is set</comment>
                </field>
                <field id="display_size_chart" translate="label comment" type="select" sortOrder="90" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Display Size Chart</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="size_chart_type" translate="label comment" type="select" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Size Chart Type</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\SizeChartTypes</source_model>
                </field>
                <field id="size_chart_link" translate="label comment" type="text" sortOrder="105" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Size Chart Page Link</label>
                    <depends>
                        <field id="size_chart_type">cms_page</field>
                    </depends>
                </field>
                <field id="size_chart_block" translate="label comment" type="select" sortOrder="105" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Size Chart Popup</label>
                    <source_model>Codazon\ThemeLayoutPro\Model\Config\Source\CMSBlocks</source_model>
                    <depends>
                        <field id="size_chart_type">cms_block</field>
                    </depends>
                </field>
                <field id="size_chart_attribute" translate="label comment" type="text" sortOrder="105" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Size Chart Attribute</label>
                    <comment>The code of product attribute used as size chart popup content. Note: Empty "Size Chart Link Label" field below to use the attribute name as link label.</comment>
                    <depends>
                        <field id="size_chart_type">product_attribute</field>
                    </depends>
                </field>
                <field id="size_chart_attribute_set_mapping" translate="label comment" type="textarea" sortOrder="105" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Size Chart Attribute Set Mappings</label>
                    <comment><![CDATA[<p>Use syntax below: <br /> &lt;attribute set 1 name&gt;:&lt;CMS block 1 identifier&gt;<br /> &lt;attribute set 2 name&gt;:&lt;CMS block 2 identifier&gt;<br />(Break line to add new mapping).<br /> E.g.: </p><p style="border:1px solid #eb5202;padding: 5px;margin: 10px 0px;"><span style="color:#eb5202">Default</span>:codazon-sizechart-default<br /><span style="color:#eb5202">Women Clothing</span>:codazon-sizechart-women-clothing</p><p>Note: Empty "Size Chart Link Label" field below to use the cms block name as link label.</p>]]></comment>
                    <depends>
                        <field id="size_chart_type">product_attribute_set</field>
                    </depends>
                </field>
                <field id="size_chart_label" translate="label comment" type="text" sortOrder="110" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Size Chart Link Label</label>
                </field>
                <field id="display_buy_now_button" translate="label comment" type="select" sortOrder="125" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Display "Buy Now" button</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Depends on design theme.</comment>
                </field>
                <field id="custom_tab_block" translate="label comment" type="text" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Custom Static Tab (Use CMS Blocks)</label>
                    <comment>Separate block identifier by comma (,).</comment>
                </field>
                <field id="custom_tab_attributes" translate="label comment" type="text" sortOrder="140" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Custom Flexibe Tab (Use Product Attributes)</label>
                    <comment>To add more tabs, you can go to menu Stores > Attributes > Product. Add new attribute. Separate attribute codes by comma (,).</comment>
                </field>
                <field id="tabs_order" translate="label comment" type="text" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Tabs Order</label>
                    <comment><![CDATA[The sort order of tabs in product view page (use layout block names range for sorting). You can use some block names below to input your custom order: product.info.description, product.attributes, reviews.tab, product-tab-codazon_custom_tab, product-tab-[product attribute code], product-tab-cms-[cms block identifier]. E.g.:<br />product.attributes,product.attributes,reviews.tab]]></comment>
                </field>
                <field id="removed_tabs" translate="label comment" type="text" sortOrder="151" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Removed Tabs</label>
                     <comment><![CDATA[The tabs need to be removed. You can use some block names below to input your custom removed tabs: product.info.description, product.attributes, reviews.tab, product-tab-codazon_custom_tab, product-tab-[product attribute code], product-tab-cms-[cms block identifier]. E.g.:<br /> product.attributes,reviews.tab]]></comment>
                </field>
                <field id="desc_tab_max_height" translate="label comment" type="text" sortOrder="160" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
                    <label>Maximum Height of Details Tab</label>
                    <comment>If the product description is too long, and the height of Details tab is larger than your defined value, a "More View" button will be displayed. Leave empty if you don't use "more view" feature.</comment>
                </field>
            </group>
            <group id="category_view" translate="label" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Category View</label>
				<group id="design" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Product Listing Design</label>
					<field id="template" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
						<label>Product Listing Style</label>
						<backend_model>Codazon\ThemeLayoutPro\Model\Config\Backend\ProductListStyle</backend_model>
						<source_model>Codazon\ThemeLayoutPro\Model\Config\Source\ListingStyles</source_model>
					</field>
					<field id="show" translate="label comment" type="multiselect" sortOrder="15" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
						<label>Display</label>
						<source_model>Codazon\ThemeLayoutPro\Model\Config\Source\ProductListDisplay</source_model>
					</field>
					<field id="margin_right_desktop" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
						<label>Right Margin on Desktop</label>
						<comment>( â ) Horizontal Space Between Two Product Items (px)</comment>
					</field>
					<field id="margin_bottom_desktop" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
						<label>Bottom Margin on Desktop</label>
						<comment>( â ) Vertical Space Between Two Product Items (px)</comment>
					</field>
					<field id="margin_right_mobile" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
						<label>Right Margin on Mobile</label>
						<comment>( â ) Horizontal Space Between Two Product Items (px)</comment>
					</field>
					<field id="margin_bottom_mobile" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
						<label>Bottom Margin on Mobile</label>
						<comment>( â ) Vertical Space Between Two Product Items (px)</comment>
					</field>
				</group>
				<group id="items_per_row_1" translate="label" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
